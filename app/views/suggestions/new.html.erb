<h1>Morgan and Morgan</h1>
<h2>Suggestion Box</h2>

<% if @suggestion.errors.any? %>
  <h2>The following errors prevented the todo from being saved</h2>
  <ul>
    <% @suggestion.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @suggestion do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :office %> <br>
    <%= f.text_field :office %>
  </p>
  
  <p>
    <%= f.label :suggestion %> <br>
    <%= f.text_area :suggestion %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>